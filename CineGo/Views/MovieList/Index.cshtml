@{
    ViewData["Title"] = "Phim";
}
<head>
    <link rel="stylesheet" href="~/css/movie.css" />
    <style>
        /* ============================
           MOVIE CONTAINER GRID
        ============================ */
        #movieContainer {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 1.5rem;
            margin-top: 40px;
            justify-items: center;
        }

            #movieContainer .no-movies {
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100px;
                font-size: 1.2rem;
                color: #999;
                font-weight: 500;
                text-align: center;
            }

        /* Responsive cho các màn nhỏ hơn */
        @@media (max-width: 1200px) {
            #movieContainer

        {
            grid-template-columns: repeat(3, 1fr);
        }

        }

        @@media (max-width: 768px) {
            #movieContainer

        {
            grid-template-columns: repeat(2, 1fr);
        }

        }

        @@media (max-width: 480px) {
            #movieContainer

        {
            grid-template-columns: repeat(1, 1fr);
        }

        }

        /* ============================
           MOVIE CARD
        ============================ */
        .movie-card {
            background: linear-gradient(180deg, #fff, #fdf3f3);
            border-radius: 20px;
            overflow: hidden;
            border: 3px solid rgba(220, 20, 60, 0.55);
            box-shadow: 0 4px 12px rgba(220, 20, 60, 0.25), 0 6px 18px rgba(220, 20, 60, 0.25);
            transition: transform 0.35s ease, box-shadow 0.35s ease, border-color 0.35s ease;
            display: flex;
            flex-direction: column;
            width: 100%;
            margin: 0 auto;
            position: relative;
            max-width: 300px;
        }

            .movie-card:hover {
                transform: translateY(-8px) scale(1.03);
                box-shadow: 0 12px 28px rgba(220, 20, 60, 0.35);
            }

        /* ============================
           POSTER PHIM (FULL WIDTH)
        ============================ */
        .poster-wrapper {
            position: relative;
            width: 100%;
            aspect-ratio: 2 / 3; /* Giữ tỉ lệ poster 2:3 */
            overflow: hidden;
            border-radius: 16px 16px 0 0;
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .poster-wrapper img {
                width: 100%;
                height: 100%;
                object-fit: cover; /* Full chiều ngang + cắt vừa khung */
                object-position: center;
                display: block;
                transition: transform 0.4s ease, filter 0.4s ease;
            }

        .movie-card:hover img {
            transform: scale(1.07);
            filter: brightness(0.85);
        }

        /* ============================
           OVERLAY HIỆN KHI HOVER
        ============================ */
        .movie-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            opacity: 0;
            transition: opacity 0.3s ease;
            border-radius: 20px 20px 0 0;
            backdrop-filter: blur(3px);
        }

        .movie-card:hover .movie-overlay {
            opacity: 1;
        }

        /* ============================
           NÚT TRONG OVERLAY
        ============================ */
        .btn-movie-action {
            background: linear-gradient(135deg, #DC143C, #ff4b2b);
            color: #fff;
            border: none;
            border-radius: 50px;
            padding: 8px 18px;
            margin: 6px 0;
            font-size: 0.9rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.25s ease;
            width: 130px;
            text-align: center;
            box-shadow: 0 4px 12px rgba(255, 77, 77, 0.4);
        }

            .btn-movie-action:hover {
                transform: scale(1.07);
                box-shadow: 0 6px 18px rgba(255, 77, 77, 0.55);
            }

        .btn-ticket {
            background: linear-gradient(135deg, #DC143C, #ff4b2b);
        }

        .btn-detail {
            background: linear-gradient(135deg, #e63e62, #ff6b81);
        }

        .btn-action {
            display: flex;
            align-content: center;
            justify-content: center;
        }

        /* ============================
           THÔNG TIN PHIM
        ============================ */
        .movie-title {
            font-weight: 700;
            font-size: 1rem;
            color: #DC143C;
            text-align: center;
            margin: 10px 12px 4px 12px;
            max-width: 90%;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            letter-spacing: 0.3px;
        }

        .movie-info {
            font-size: 0.82rem;
            color: #666;
            text-align: center;
            margin-bottom: 14px;
        }

        /* ============================
           GIỚI HẠN ĐỘ TUỔI
        ============================ */
        .movie-age {
            display: inline-flex;
            justify-content: center;
            align-items: center;
            padding: 1px;
            width: 22px;
            height: 22px;
            border-radius: 50%;
            color: #fff;
            font-weight: 700;
            font-size: 0.75rem;
            margin-right: 4px;
        }

        .age-0, .age-G, .age-P {
            background: linear-gradient(135deg, #2ecc71, #27ae60);
        }

        .age-10 {
            background: linear-gradient(135deg, #3498db, #2980b9);
        }

        .age-13 {
            background: linear-gradient(135deg, #f39c12, #e67e22);
        }

        .age-16 {
            background: linear-gradient(135deg, #e74c3c, #c0392b);
        }

        .age-18 {
            background: linear-gradient(135deg, #8e44ad, #6c3483);
        }

        .age-21 {
            background: linear-gradient(135deg, #000000, #434343);
        }

        /* ============================
           BUTTONS (CHUNG)
        ============================ */
        .text-center.mb-4 {
            display: flex;
            justify-content: center;
            gap: 12px;
            flex-wrap: wrap;
        }

        .text-center.btn-view-more {
            margin-top: 40px;
        }

        .btn-cinego {
            background: linear-gradient(135deg, #ff6b6b, #ff4757);
            color: #fff;
            border: none;
            border-radius: 50px;
            padding: 10px 30px;
            font-weight: 600;
            font-size: 0.95rem;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
            transition: all 0.3s ease;
            width: 200px;
            text-align: center;
        }

            .btn-cinego:hover {
                transform: translateY(-2px) scale(1.03);
                box-shadow: 0 8px 20px rgba(0,0,0,0.25);
            }

            .btn-cinego.active {
                background: linear-gradient(135deg, #ff4757, #ff6b6b);
                box-shadow: 0 6px 18px rgba(0,0,0,0.3);
            }

        /* ============================
           RESPONSIVE TEXT
        ============================ */
        @@media (max-width: 576px) {
            .movie-title

        {
            font-size: 0.9rem;
        }

        .movie-info {
            font-size: 0.75rem;
        }

        .btn-cinego {
            padding: 8px 20px;
            font-size: 0.85rem;
            min-width: 120px;
        }

        }

        @@media (max-width: 480px) {
            .text-center.mb-4

        {
            flex-direction: column;
            align-items: center;
        }

        .btn-cinego {
            width: 200px;
            margin-bottom: 8px;
        }

        .text-center.btn-view-more {
            margin-top: 20px;
        }

        .btn-action {
                display: flex;
                margin: 0 0 0 24%;
            flex-direction: column;
        }

        }
    </style>
</head>

<div class="btn-action">
    <button class="btn btn-cinego me-2" id="btnNowShowing">Phim đang chiếu</button>
    <button class="btn btn-cinego" id="btnComingSoon">Phim sắp chiếu</button>
</div>

<div id="movieContainer"></div>

<div class="text-center mb-4 btn-view-more">
    <button class="btn btn-cinego" id="btnLoadMore" style="display:none;">Xem thêm</button>
</div>

<!-- JS load cuối body -->
@section Scripts {
    <script src="@Url.Content("~/js/movie.js")"></script>
    <script src="@Url.Content("~/js/site.js")"></script>
}