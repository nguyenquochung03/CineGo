@using CineGo.DTO.Common
@using CineGo.DTO.PricingRuleDay
@model PagedResult<PricingRuleDayDTO>

@{
    var ruleId = (int)ViewBag.PricingRuleId;
}

<div>
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Ngày Áp Dụng</h5>
        <button class="btn btn-sm btn-primary" onclick="openRuleDayModal()">
            <i class="bi bi-plus-circle me-1"></i> Thêm Ngày Áp Dụng
        </button>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th>Ngày Trong Tuần</th>
                        <th class="text-end">Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Items != null && Model.Items.Any())
                    {
                        @foreach (var item in Model.Items)
                        {
                            var day = item.DayName?.Replace("'", "\\'") ?? "";
                            <tr>
                                <td>@item.DayName</td>
                                <td class="text-end text-nowrap">
                                    <button class="btn btn-warning btn-sm me-1 text-white"
                                            onclick="openRuleDayModal(@item.Id, '@day')" title="Sửa">
                                        <i class="bi bi-pencil-fill me-1"></i> Sửa
                                    </button>
                                    <button class="btn btn-danger btn-sm"
                                            onclick="deletePricingRuleDay(@item.Id)" title="Xóa">
                                        <i class="bi bi-trash-fill me-1"></i> Xóa
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="2" class="text-center text-muted py-3">
                                <i class="bi bi-info-circle me-1"></i> Không có Ngày áp dụng nào được tìm thấy.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Phân trang -->
        <div class="mt-3 text-center">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <button class="btn btn-sm @(i == Model.Page ? "btn-danger" : "btn-outline-primary")"
                        onclick="loadPricingRuleDays(@ruleId, currentRuleName, @i)">
                    @i
                </button>
            }
        </div>
    </div>
</div>
