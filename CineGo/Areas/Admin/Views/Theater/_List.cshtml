@using CineGo.DTO.Common
@model PagedResult<CineGo.DTO.TheaterDTO>

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Danh sách phòng chiếu</h5>
        <button class="btn btn-sm btn-primary" onclick="addTheater(window.currentCinemaId)"><i class="bi bi-plus-circle me-1"></i> Thêm phòng</button>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th>Tên phòng</th>
                        <th>Số hàng</th>
                        <th>Số cột</th>
                        <th class="text-end">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Items != null && Model.Items.Any())
                    {
                        foreach (var t in Model.Items)
                        {
                            <tr onclick="loadSeats(@t.Id, '@t.Name')" style="cursor:pointer;">
                                <td>@t.Name</td>
                                <td>@t.Rows</td>
                                <td>@t.Columns</td>
                                <td class="text-end">
                                    <button class="btn btn-warning btn-sm"
                                            onclick="event.stopPropagation(); editTheater(@t.Id, '@t.Name', @t.Rows, @t.Columns, window.currentCinemaId)">
                                        <i class="bi bi-pencil-fill me-1"></i>Sửa
                                    </button>
                                    <button class="btn btn-danger btn-sm"
                                            onclick="event.stopPropagation(); deleteTheater(@t.Id, window.currentCinemaId)">
                                        <i class="bi bi-trash-fill me-1"></i>Xóa
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted">Chưa có phòng chiếu nào.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Phân trang -->
        <div class="mt-3 text-center">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <button class="btn btn-sm @(i == Model.Page ? "btn-danger text-white" : "btn-outline-warning")"
                        onclick="loadTheaters(window.currentCinemaId, window.currentCinemaName, @i)">
                    @i
                </button>
            }
        </div>
    </div>
</div>
