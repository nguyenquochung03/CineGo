@using CineGo.DTO.Common
@model PagedResult<CineGo.DTO.RegionDTO>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Danh sách khu vực</h5>
        <button class="btn btn-sm btn-primary" onclick="addRegion()"><i class="bi bi-plus-circle me-1"></i> Thêm khu vực</button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr><th>Tên khu vực</th><th class="text-end">Hành động</th></tr>
                </thead>
                <tbody>
                    @if (Model.Items != null && Model.Items.Any())
                    {
                        @foreach (var r in Model.Items)
                        {
                            <tr onclick="loadCities(@r.Id,'@r.Name')" style="cursor:pointer;">
                                <td>@r.Name</td>
                                <td class="text-end">
                                    <button class="btn btn-warning btn-sm" onclick="event.stopPropagation(); editRegion(@r.Id,'@r.Name')">
                                        <i class="bi bi-pencil-fill me-1"></i>Sửa
                                    </button>
                                    <button class="btn btn-danger btn-sm" onclick="event.stopPropagation(); deleteRegion(@r.Id)">
                                        <i class="bi bi-trash-fill me-1"></i> Xóa
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted">Chưa có vùng nào.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="mt-3 text-center">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                var btnClass = i == Model.Page ? "btn-danger" : "btn-outline-primary";
                <button class="btn btn-sm @btnClass"
                        onclick="loadRegions(@i)">
                    @i
                </button>
            }
        </div>
    </div>
</div>
