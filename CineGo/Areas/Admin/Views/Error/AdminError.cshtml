@{
    Layout = "~/Areas/Admin/Views/Shared/_LoginLayout.cshtml";
    var statusCode = ViewData["StatusCode"] ?? "???";
    var title = ViewData["Title"] ?? "Oops!";
}
<link rel="stylesheet" href="~/css/AdminError.css" />

<div class="admin-error-page">
    <div class="admin-error-card">
        <div class="mb-4">
            <i class="bi bi-exclamation-triangle-fill text-danger"></i>
        </div>
        <h1 class="display-5 fw-bold text-danger mb-2">@title</h1>
        <p class="text-muted mb-4 fs-5">Mã lỗi: <span class="fw-semibold">@statusCode</span></p>

        <a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })"
           class="btn btn-warning btn-lg px-4 shadow-sm">
            <i class="bi bi-speedometer2 me-2"></i> Quay lại Dashboard
        </a>
    </div>
</div>
