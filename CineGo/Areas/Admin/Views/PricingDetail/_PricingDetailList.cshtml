@using CineGo.DTO.Common
@using CineGo.DTO.PricingDetail
@model PagedResult<PricingDetailDTO>

@{
    var ruleId = (int)ViewBag.PricingRuleId;
}

<div>
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Chi Tiết Giá</h5>
        <button class="btn btn-sm btn-primary" onclick="openDetailModal()">
            <i class="bi bi-plus-circle me-1"></i> Thêm Chi Tiết
        </button>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th>Loại Vé</th>
                        <th>Loại Ghế</th>
                        <th>Giá Cơ Bản</th>
                        <th class="text-end">Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Items != null && Model.Items.Any())
                    {
                        @foreach (var item in Model.Items)
                        {
                            var ticket = item.TicketType?.Replace("'", "\\'") ?? "";
                            var seat = item.SeatType?.Replace("'", "\\'") ?? "";

                            <tr>
                                <td>@item.TicketType</td>
                                <td>@item.SeatType</td>
                                <td>@item.BasePrice.ToString("N0") VNĐ</td>
                                <td class="text-end text-nowrap">
                                    <button class="btn btn-warning btn-sm me-1 text-white"
                                            onclick="openDetailModal(@item.Id, '@ticket', '@seat', @item.BasePrice)" title="Sửa">
                                        <i class="bi bi-pencil-fill me-1"></i> Sửa
                                    </button>
                                    <button class="btn btn-danger btn-sm"
                                            onclick="deletePricingDetail(@item.Id)" title="Xóa">
                                        <i class="bi bi-trash-fill me-1"></i> Xóa
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-3">
                                <i class="bi bi-info-circle me-1"></i> Không có Chi tiết giá nào được tìm thấy.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Phân trang -->
        <div class="mt-3 text-center">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <button class="btn btn-sm @(i == Model.Page ? "btn-red-orange" : "btn-outline-red-orange")"
                        onclick="loadPricingDetails(@ruleId, currentRuleName, @i)">
                    @i
                </button>
            }
        </div>
    </div>
</div>
