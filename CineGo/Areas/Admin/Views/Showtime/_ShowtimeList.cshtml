@using CineGo.DTO.Common
@using CineGo.DTO.Showtime
@model PagedResult<ShowtimeDTO>

<div>
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Danh sách suất chiếu</h5>
        <button class="btn btn-sm btn-primary" onclick="openShowtimeModal()">
            <i class="bi bi-plus-circle me-1"></i> Thêm Suất Chiếu
        </button>
    </div>
    <div class="row g-2 mb-3">
        <div class="col-md-3">
            <input type="date" id="filterDate" class="form-control" placeholder="Ngày chiếu" />
        </div>
        <div class="col-md-2">
            <input type="time" id="filterStart" class="form-control" placeholder="Giờ bắt đầu" />
        </div>
        <div class="col-md-2">
            <input type="time" id="filterEnd" class="form-control" placeholder="Giờ kết thúc" />
        </div>
        <div class="col-md-3 position-relative">
            <input type="text" id="filterMovie" class="form-control" placeholder="Tên phim" />
            <input type="hidden" id="filterMovieId" />
            <div id="filterMovieSuggestions" class="list-group position-absolute w-100"></div>
        </div>
        <div class="col-md-2 d-grid">
            <button class="btn btn-success" onclick="applySearch()">
                <i class="bi bi-search me-1"></i> Tìm kiếm
            </button>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th>Phim</th>
                        <th>Ngày</th>
                        <th>Thời gian</th>
                        <th>Định dạng</th>
                        <th class="text-end">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Items != null && Model.Items.Any())
                    {
                        @foreach (var s in Model.Items)
                        {
                            <tr onclick="loadShowtimePrices(@s.Id, '@s.MovieTitle')"
                                style="cursor:pointer;">
                                <td>@s.MovieTitle</td>
                                <td>@s.Date.ToString("dd/MM/yyyy")</td>
                                <td>@s.StartTime.ToString(@"hh\:mm") - @s.EndTime.ToString(@"hh\:mm")</td>
                                <td>@s.Format</td>
                                <td class="text-end text-nowrap">
                                    <button class="btn btn-info btn-sm me-1 text-white"
                                            onclick="event.stopPropagation(); loadShowtimePrices(@s.Id, '@s.MovieTitle')"
                                            title="Giá vé">
                                        <i class="bi bi-cash-stack me-1"></i> Giá
                                    </button>
                                    <button class="btn btn-secondary btn-sm me-1 text-white"
                                            onclick="event.stopPropagation();"
                                            title="Rạp chiếu">
                                        <i class="bi bi-building me-1"></i> Rạp
                                    </button>
                                    <button class="btn btn-warning btn-sm me-1 text-white"
                                            onclick="event.stopPropagation(); openShowtimeModal(@s.Id, @s.MovieId, '@s.MovieTitle.Replace("'", "\\'")', '@s.Date.ToString("yyyy-MM-dd")', '@s.StartTime.ToString(@"hh\:mm")', '@s.EndTime.ToString(@"hh\:mm")', '@s.Format')"
                                            title="Chỉnh sửa">
                                        <i class="bi bi-pencil-fill me-1"></i> Sửa
                                    </button>
                                    <button class="btn btn-danger btn-sm"
                                            onclick="event.stopPropagation(); deleteShowtime(@s.Id)"
                                            title="Xóa">
                                        <i class="bi bi-trash-fill me-1"></i> Xóa
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-3">
                                <i class="bi bi-info-circle me-1"></i> Chưa có suất chiếu nào.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="mt-3 text-center">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <button class="btn btn-sm @(i == Model.Page ? "btn-red-orange" : "btn-outline-red-orange")"
                            onclick="loadShowtimes(@i)">
                        @i
                    </button>
                }
            </div>
        </div>
    </div>
</div>