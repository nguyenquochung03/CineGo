@using CineGo.DTO.Common
@using CineGo.DTO.ShowtimePrice
@model PagedResult<ShowtimePriceDTO>

@{
    var showtimeId = ViewBag.ShowtimeId as int? ?? 0;
}

<div>
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Giá suất chiếu</h5>
        <button class="btn btn-sm btn-primary" onclick="openShowtimePriceModal()">
            <i class="bi bi-plus-circle me-1"></i> Thêm Giá Suất Chiếu
        </button>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th>Loại vé</th>
                        <th>Loại ghế</th>
                        <th>Giá (VNĐ)</th>
                        <th class="text-end">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Items != null && Model.Items.Any())
                    {
                        @foreach (var p in Model.Items)
                        {
                            <tr>
                                <td>@p.TicketType</td>
                                <td>@p.SeatType</td>
                                <td>@p.Price.ToString("N0")</td>
                                <td class="text-end text-nowrap">
                                    <button class="btn btn-warning btn-sm me-1 text-white"
                                            onclick="openShowtimePriceModal(@p.Id, '@p.TicketType', '@p.SeatType', @p.Price)"
                                            title="Sửa">
                                        <i class="bi bi-pencil-fill me-1"></i> Sửa
                                    </button>
                                    <button class="btn btn-danger btn-sm"
                                            onclick="deleteShowtimePrice(@p.Id)"
                                            title="Xóa">
                                        <i class="bi bi-trash-fill me-1"></i> Xóa
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-3">
                                <i class="bi bi-info-circle me-1"></i> Chưa có giá vé nào.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="mt-3 text-center">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <button class="btn btn-sm @(i == Model.Page ? "btn-red-orange" : "btn-outline-red-orange")"
                            onclick="loadShowtimePrices(@showtimeId, currentShowtimeTitle, @i)">
                        @i
                    </button>
                }
            </div>

        </div>
    </div>
</div>