@using CineGo.DTO.Common
@model PagedResult<CineGo.DTO.CinemaDTO>
@using System.Web

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Danh sách rạp chiếu</h5>
        <button class="btn btn-sm btn-primary" onclick="addCinema(window.currentCityId)"><i class="bi bi-plus-circle me-1"></i> Thêm rạp</button>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th style="width: 20%;">Tên rạp</th>
                        <th style="width: 30%;">Địa chỉ</th>
                        <th style="width: 35%;">Tiện ích</th>
                        <th class="text-end" style="width: 15%;">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Items != null && Model.Items.Any())
                    {
                        foreach (var c in Model.Items)
                        {
                            <tr onclick="loadTheaters(@c.Id, '@c.Name')" style="cursor:pointer;">
                                <td>@c.Name</td>
                                <td>@c.Address</td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(c.Amenities))
                                    {
                                        <span class="amenities-text" title="@c.Amenities">@c.Amenities</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">Không có</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <button class="btn btn-warning btn-sm text-white"
                                            onclick="event.stopPropagation(); editCinema(
                                            @c.Id,
                                            '@Html.Raw(HttpUtility.JavaScriptStringEncode(c.Name))',
                                            '@Html.Raw(HttpUtility.JavaScriptStringEncode(c.Address))',
                                            '@Html.Raw(HttpUtility.JavaScriptStringEncode(c.Amenities))',
                                            window.currentCityId
                                        )">
                                        <i class="bi bi-pencil-fill me-1"></i>Sửa
                                    </button>
                                    <button class="btn btn-danger btn-sm"
                                            onclick="event.stopPropagation(); deleteCinema(@c.Id, window.currentCityId)">
                                        <i class="bi bi-trash-fill me-1"></i>Xóa
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted">Chưa có rạp chiếu nào.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Phân trang -->
        <div class="mt-3 text-center">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <button class="btn btn-sm @(i == Model.Page ? "btn-red-orange" : "btn-outline-red-orange")"
                        onclick="loadCinemas(window.currentCityId, window.currentCityName, @i)">
                    @i
                </button>
            }
        </div>
    </div>
</div>

<style>
    .amenities-text {
        display: -webkit-box;
        -webkit-line-clamp: 1;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: normal;
        max-width: 100%;
    }
</style>