@using CineGo.DTO.Common
@model PagedResult<CineGo.DTO.CinemaDTO>

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Danh sách rạp chiếu</h5>
        <button class="btn btn-sm btn-primary" onclick="addCinema(window.currentCityId)">+ Thêm rạp</button>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th>Tên rạp</th>
                        <th>Địa chỉ</th>
                        <th class="text-end">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Items != null && Model.Items.Any())
                    {
                        foreach (var c in Model.Items)
                        {
                            <tr onclick="loadTheaters(@c.Id, '@c.Name')" style="cursor:pointer;">
                                <td>@c.Name</td>
                                <td>@c.Address</td>
                                <td class="text-end">
                                    <button class="btn btn-warning btn-sm"
                                            onclick="event.stopPropagation(); editCinema(@c.Id, '@c.Name', '@c.Address', window.currentCityId)">
                                        <i class="bi bi-pencil-fill me-1"></i>Sửa
                                    </button>
                                    <button class="btn btn-danger btn-sm"
                                            onclick="event.stopPropagation(); deleteCinema(@c.Id, window.currentCityId)">
                                        <i class="bi bi-trash-fill me-1"></i>Xóa
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted">Chưa có rạp chiếu nào.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Phân trang -->
        <div class="mt-3 text-center">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <button class="btn btn-sm @(i == Model.Page ? "btn-danger" : "btn-outline-primary")"
                        onclick="loadCinemas(window.currentCityId, window.currentCityName, @i)">
                    @i
                </button>
            }
        </div>
    </div>
</div>
